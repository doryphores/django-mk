<!DOCTYPE html>
<html>
<head>
<title>{% block title %}Mario Kart{% endblock %}</title>

<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.min.css" />
<link rel="stylesheet" href="/static/css/extra.css" />
<script src="http://code.jquery.com/jquery-1.4.4.min.js"></script>
<script>
$(document).bind("mobileinit", function(){
	$.extend(  $.mobile , {
		ajaxFormsEnabled: false,
		ajaxLinksEnabled: false
	});
});
</script>
<script src="http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.min.js"></script>
</head>
<body>
<div data-role="page">
	<div data-role="header" data-nobackbtn="true">
		<a href="/" data-theme="a">Home</a>
		<h1>{% block page_title %}{% endblock %}</h1>
		<a href="/new/" data-theme="b" data-icon="plus">New event</a>
	</div>
	<div data-role="content">
	{% if messages %}
	<ul class="messages">
	    {% for message in messages %}
	    <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
	    {% endfor %}
	</ul>
	{% endif %}
	{% block content %}{% endblock %}
	</div>
	<div data-role="footer" class="ui-bar" data-position="fixed" id="footer-nav">
		<div data-role="controlgroup" data-type="horizontal">
			<h4>More stats:</h4>
			<a href="/players/" data-theme="a">Players</a>
			<a href="/tracks/" data-theme="a">Tracks</a>
			<a href="/events/" data-theme="a">Events</a>
		</div>
	</div>
</div>
</body>
</html>